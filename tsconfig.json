{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "declarationDir": "./ref",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}