<?xml version="1.0" encoding="UTF-8"?>
<recipe xmlns="http://grimoire.gl/ns/recipe"
  xmlns:ds="http://grimoire.gl/ns/recipe/stages"
  xmlns:b="http://grimoire.gl/ns/recipe/buffer-prefix"
  xmlns:v="http://grimoire.gl/ns/recipe/variable-prefix">
  <textures>
    <fit name="depth" layout="RGB" format="UBYTE"/>
    <fit name="g-normal" layout="RGBA" format="UBYTE"/>
    <fit name="l-diffuse" layout="RGB" format="UBYTE"/>
    <fit name="l-specular" layout="RGB" format="UBYTE"/>
    <fit name="color" layout="RGBA" format="UBYTE"/>
    <fit name="hitarea" layout="RGB" format="UBYTE"/>
  </textures>
  <path>
    <ds:hitarea b:OUT="hitarea"/>
    <ds:gbuffer b:PRIMARY="g-normal" b:DEPTH="depth"/>
    <ds:light b:PRIMARY="g-normal" b:DEPTH="depth" b:DLIGHT="l-diffuse" b:SLIGHT="l-specular"/>
    <ds:forward b:DLIGHT="l-diffuse" b:SLIGHT="l-specular" b:OUT="color"/>
    <ds:fxaa b:INPUT="color" b:OUTPUT="default" v:coeff="1.32"/>
  </path>
</recipe>
